{
  "extends": "salt-typescript",
  "plugins": ["node"],
  "parserOptions": {
    "project": "/Users/pawelobrzut/PGP-678/saltazonFrontend/tsconfig.json"
  },
  "ignorePatterns": ["vite.config.js", "src/**/*"],
  "rules": {
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "js": "never",
        "jsx": "never",
        "ts": "never",
        "tsx": "never",
        "": "never"
      }
    ]
  },
  "settings": {
    "node": {
      "tryExtensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".node"],
      "resolvePaths": ["./"],
      "extensions": [".js", ".jsx", ".ts", ".tsx", ".json", ".node"]
    }
  }
}
